<div class="container">
    <div class="container-text-intro">
        <svg xmlns="http://www.w3.org/2000/svg">
          <filter id="motion-blur-filter" filterUnits="userSpaceOnUse">
            <feGaussianBlur stdDeviation="100 0"></feGaussianBlur>
          </filter>
        </svg>
      <span filter-content="S"> Details </span>
    </div>

  <div class="card-show">
    <%= cl_image_tag @nvt.photo.key %>

    <div class="card-show-infos">
      <h3><%= @nvt.category %></h3>
      <h2><%= @nvt.title %></h2>
      <p><%= @nvt.price %> <strong>$NVC</strong></p>
    </div>
  </div>

  <div class="container-content-display">
    <br>
    <p><%= @nvt.content %> </p>
    <br>
    <br>
    <p><strong>Interested in collecting this item?</strong></p>
  <%= link_to 'Collect', new_nvt_transaction_path(@nvt) %>
  </div>
</div>
